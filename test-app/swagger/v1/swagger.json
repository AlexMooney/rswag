    "/auth-tests/basic-and-api-key": {
      "post": {
        "summary": "Authenticates with basic auth and api key",
        "tags": [
          "Auth Tests"
        ],
        "operationId": "testBasicAndApiKey",
        "security": [
          {
            "basic_auth": [

